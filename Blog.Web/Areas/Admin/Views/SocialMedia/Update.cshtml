@model VMSocialMediaUpdate

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Sosyal Medya Yönetimi /</span> Bağlantı Güncelle
    </h4>

    <div class="row g-6">
        <div class="col-md-12">
            <div class="card">
                <h5 class="card-header">Sosyal Medya</h5>
                <form asp-controller="SocialMedia" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">

                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Link" for="defaultFormControlInput" class="form-label">Link</label>
                            <input asp-for="Link" type="text" class="form-control mb-4" id="defaultFormControlInput" placeholder="Lütfen sosyal medya hesabınızın bağlantı adresini giriniz." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Link" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
