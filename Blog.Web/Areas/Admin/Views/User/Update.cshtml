@model VMUserUpdate


<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Kullanıcı Yönetimi / </span>Kullanıcı Bilgilerini Düzenle
    </h4>

    <div class="row g-6">
        <div class="col-md-12">
            <div class="card">
                <h5 class="card-header">KULLANICILAR</h5>
                <form asp-controller="User" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" style="color:red"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="card-body">

                        <div class="form-group">
                            <label asp-for="FirstName" for="defaultFormControlInput" class="form-label">Kullanıcı İsmi</label>
                            <input asp-for="FirstName" type="text" class="form-control mb-4" id="defaultFormControlInput" placeholder="Lütfen kullanıcı ismini giriniz." aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="LastName" for="defaultFormControlInput" class="form-label">Kullanıcı Soyadı</label>
                            <input asp-for="LastName" type="text" class="form-control mb-4" id="defaultFormControlInput" placeholder="Lütfen kullanıcı soyadını giriniz." aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" for="defaultFormControlInput" class="form-label">Kullanıcı Email Adresi</label>
                            <input asp-for="Email" type="email" class="form-control mb-4" id="defaultFormControlInput" placeholder="Lütfen kullanıcı email adresini giriniz." aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="PhoneNumber" for="defaultFormControlInput" class="form-label">Kullanıcı Telefon Numarası</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control mb-4" id="defaultFormControlInput" placeholder="Lütfen kullanıcı telefon numarasını giriniz." aria-describedby="defaultFormControlHelp">
                        </div>

                        <div class="form-group">
                            <label asp-for="RoleId" for="defaultFormControlInput" class="form-label">Kullanıcı Rolü</label>
                            <select asp-for="RoleId" class="form-control mb-4" asp-items="@(new SelectList(Model.Roles, "Id", "Name"))"></select>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

