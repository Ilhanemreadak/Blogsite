@model List<VMUser>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcılar
    </h4>

    <div class="card">
        <div class="table-responsive text-nowrap m-5">

            <a class="btn btn-outline-primary mb-4" asp-area="Admin" asp-controller="User" asp-action="Add">
                Kullanıcı Ekle   <i class="bx bx-plus"></i>
            </a>

            <table class="table table-bordered" id="usersTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Email</th>
                        <th>Telefon Numarası</th>
                        <th>Rol</th>
                        <th>Email Doğrulaması</th>
                        <th>Bağlantı Hataları</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Email</th>
                        <th>Telefon Numarası</th>
                        <th>Rol</th>
                        <th>Email Doğrulaması</th>
                        <th>Bağlantı Hataları</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var user in Model)
                    {
                        <tr name="@user.Id">
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Role</td>
                            <td>@(user.EmailConfirmed ? "Doğrulanmış" : "Doğrulanmamış")</td>
                            <td>@user.AccessFailedCount</td>
                            <td>
                                <a class="btn-sm btn-outline-primary " data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-categoryId="@user.Id">
                                    <i class="bx bxs-edit"></i>
                                </a>
                                <a class="btn-sm btn-outline-danger" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-categoryId="@user.Id">
                                    <i class="bx bxs-message-x"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/UserIndex.js" type="application/ecmascript"></script>
}