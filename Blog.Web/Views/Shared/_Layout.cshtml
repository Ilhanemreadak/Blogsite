<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blog.Web</title>
    <link rel="stylesheet" href="~/assets/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/styles.css" />
    <link rel="stylesheet"
          href="https://unpkg.com/boxicons@latest/css/boxicons.min.css" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Blog.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header Section -->
    <header class="header">
        <nav class="nav bd_grid">
            <div>
                <a asp-controller="Home" asp-action="Index" class="nav_logo">Gül Çiçek Zengin</a>
            </div>

            <div class="nav_menu" id="nav_menu">
                <ul class="nav_list">
                    <li class="nav_items">
                        <a asp-controller="Home" asp-action="Index" class="nav_link active">Anasayfa</a>
                    </li>
                    <li class="nav_items">
                        <a asp-controller="About" asp-action="Index" class="nav_link active">Hakkımda</a>
                    </li>
                    <li class="nav_items">
                        <a asp-controller="Article" asp-action="Index" class="nav_link active">Makaleler</a>
                    </li>
                    <li class="nav_items">
                        <a asp-controller="Contact" asp-action="Index" class="nav_link active">İletişim</a>
                    </li>
                </ul>
            </div>

            <div class="nav_toggle" id="nav_toggle">
                <i class="bx bx-menu-alt-right"></i>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Section -->
    <footer class="footer">
        <p class="footer_title" data-aos="fade-down">Gül Çiçek Zengin</p>

        <div class="footer_socials">
            <a href="#"
               class="footer_icon"
               data-aos="fade-down"
               data-aos-delay="250"
               id="socialLinksFacebook">
                <i class="bx bxl-facebook-circle"></i>
            </a>
            <a href="#"
               class="footer_icon"
               data-aos="fade-down"
               data-aos-delay="350"
               id="socialLinksInstagram">
                <i class="bx bxl-instagram"></i>
            </a>
            <a href="#"
               class="footer_icon"
               data-aos="fade-down"
               data-aos-delay="450"
               id="socialLinksX">
                <i class="bx bxl-twitter"></i>
            </a>
            <a href="#"
               class="footer_icon"
               data-aos="fade-down"
               data-aos-delay="550"
               id="socialLinksLinkedin">
                <i class="bx bxl-linkedin"></i>
            </a>
        </div>

        <p data-aos="fade-down" data-aos-delay="650">
            &#169; Copyright MUBİTEK Tasarım Bilişim AR-GE © 2005 - @DateTime.Now.Year
        </p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="~/assets/js/main.js"></script>

    <script>
        AOS.init({
            duration: 1200,
            once: false,
        });
    </script>

</body>
</html>